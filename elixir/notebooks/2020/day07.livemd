```elixir
defmodule Helper do
  def recurse(bags, bag) do
    case Map.fetch!(bags, bag) do
      [] ->
        0

      contained_bags ->
        contained_bags
        |> Enum.map(fn {bag, count} -> count + count * Helper.recurse(bags, bag) end)
        |> Enum.sum()
    end
  end
end

Helper.recurse(parsed_input_stream, "shiny gold bag")
